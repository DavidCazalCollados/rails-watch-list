<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
url(<%= @list.photo.present? && @list.photo.key ? cl_image_path(@list.photo.key, height: 300, crop: :fill) : 'https://technoparc.com/wp-content/uploads/2021/06/carre-gris.png' %>);">
  <div class="container text-center">
    <h1><%= @list.name %></h1>
    <p></p>
  </div>
</div>
<div class="container">
  <div class="d-flex justify-content-between my-5">
      <h3>Movies</h3>
      <%= link_to new_list_bookmark_path(@list), class:"text-decoration-none" do %>
        <button type="button" class="btn btn-success">Add a movie </button>
      <% end %>
  </div>

<div class="card-total">
<% @list.bookmarks.each do |bookmark| %>
  <div class="card-movie">
    <%= link_to "delete", list_bookmark_path(bookmark, @list), class:"text-decoration-none delete-movie", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this bookmark?", class: 'text-danger' } %>
    <div class="square-white"></div>
    <div class="movie-container">
      <div class="movie-poster d-flex justify-content-start align-items-end" style="background-image: url('<%= bookmark.movie.poster_url %>');">
          <div class="p-2">
            &#11088; <%= bookmark.movie.rating %>
          </div>
      </div>
      <div class="movie-title text-center">
        <h5><strong><%= bookmark.movie.title %></strong></h5>
        <p><%= bookmark.movie.overview %></p>
      </div>
    </div>
  </div>
  <% end %>
  </div>
</div>
