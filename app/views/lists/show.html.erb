<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.24hourmoviemarathon.com/wp-content/uploads/2014/11/imdb_top_250.jpg);">
  <div class="container text-center">
    <h1><%= @list.name %></h1>
    <p></p>
  </div>
</div>
<div class="container">
  <div class="d-flex justify-content-between my-5">
      <h3>Movies</h3>
      <%= link_to new_list_bookmark_path(@list), class:"text-decoration-none" do %>
        <button type="button" class="btn btn-success">Add a movie </button>
      <% end %>
  </div>

  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip">
          <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>"/>
          <div class="card-trip-infos">
            <div>
              <h2><%= bookmark.movie.title %></h2>
              <p><%= bookmark.movie.overview %></p>
            </div>
          </div>
          <div class="card-trip-infos">
            <div>
              <p>Rating: <%= bookmark.movie.rating %></p>
            </div>
          </div>
          <div class="card-trip-infos">
            <div>
              <p><strong><i class="fa-solid fa-quote-right"></i> <%= bookmark.comment %></strong></p>
            </div>
          </div>
      </div>
    <% end %>
  </div>

</div>
